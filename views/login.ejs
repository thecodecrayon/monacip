<%- include('./partials/header.ejs') %>

<div class="box box--1"></div>
<div class="box box--2"></div>
<div class="box box--3"></div>

<div class="left"></div>
<div class="right">
    <form action="/login" method="POST" class="form">
        <h1 class="form-title">Log in</h1>
        
        <div class="sm-login">
            <div class="sm-btn google-btn">
                <img src="/img/google.png" alt="" srcset="">
                <p>Google</p>
            </div>

            <div class="sm-btn facebook-btn">
                <img src="/img/fb.webp" alt="" srcset="" class="fb-icon">
                <p>Facebook</p>
            </div>
        </div>

        <div class="form-group">
            <label for="email" class="label-email">Email Address</label>
            <br>
            <input type="email" class="form-control" name="email" id="email" placeholder="Your email">
        </div>
        <div class="form-group">
            <label for="password" class="label-password">Password</label>
            <br>
            <input type="password" class="form-control" name="password" id="password" placeholder="Your password">
            <div class="forgot-password">
                <div class="remember-me-option">
                    <input type="checkbox" id="remember-me" name="remember-me" value="remember-me">
                    <label for="remember-me">Remember me</label>
                </div>
                <a href="#">Reset Password?</a>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Log in</button>
        <p>Don't have an account yet? <a href="/signup">New Account</a></p>
    </form>

    <div class="section-info">
        <img src="/img/mona-logo.png" alt="Mona CIP logo" width="100px" height="100px">
        <div class="content">
            <h2>Welcome Back,</h2>
            <p>
                This handy tool helps you create dummy text for all your layout needs. We are gradually adding new functionality and we welcome your suggestions and feedback.
            </p>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>