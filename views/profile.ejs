<%- include('./partials/header.ejs') %>

<form action="/profile" method="POST" enctype="multipart/form-data">
  <h1 class="form-title">Profile</h1>
  <div class="form-group">
    <label for="firstname">First Name</label>
    <br>
    <input type="text" name="firstname" id="firstname" placeholder="John">
  </div>

  <div class="form-group">
    <label for="lastname">Last Name</label>
    <br>
    <input type="text" name="lastname" id="lastname" placeholder="Doe">

  <div class="form-group">
    <label for="address">Address</label>
    <br>
    <input type="text" name="address" id="address" placeholder="25th Baker Street, London">
  </div>
  
  <div class="form-group"> 
    <label for="phone">Phone</label>
    <br>
    <input type="text" name="phone" id="phone" placeholder="+91-1234567890">
  </div>

  <div class="form-group"> 
    <label for="gender">Gender</label>
    <br>
    <input type="text" name="gender" id="gender" placeholder="Male/Female">
  </div>

  <div class="form-group">
    <label for="profilepic">Choose a Profile Picture</label>
    <br>
    <input type="file" name="profilepic" id="profilepic">
  </div>

  <button type="submit" class="btn btn-primary">Create Profile &rarr;</button>
</form>

<%- include('./partials/footer.ejs') %>